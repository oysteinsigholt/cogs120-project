<!doctype html>

<html>
<head>
 {{> head }}
</head>

<body>
	<form method="post" action="/wizard/next">
	<div class="navbar-fixed">
		<nav class="top-nav">
	    <div class="nav-wrapper">
				<ul class="left">
	        <!--<li><button class="btn-back" type="submit" name="action" ><i class="material-icons">keyboard_arrow_left</i></button></li>-->
          <li><a href="#" class="submit"><i class="material-icons">chevron_left</i></a></li>
	      </ul>
	      <span class="brand-logo course-name">{{ course.code }}: {{ course.name }}</span>
        {{#if progress}}
          <div class="progress">
              <div class="determinate" style="width: {{ progress }}%"></div>
          </div>
        {{/if}}
	    </div>
	  </nav>
	</div>
		<main>
				{{>course this}}
				<input type="hidden" name="index" value="{{ user.wizard.index }}" />
		</main>
		<footer>
			{{#if user.wizard.final}}
			<button class="btn btn-large waves-effect waves-light confirm-timeslots" id="section-next" type="submit" name="action" value="next"
      data-confirmMessage="You have not selected any timeslots for this course. <br><b>Do you wish to continue?</b>"
      data-confirmYes="Continue"
      data-confirmNo="Stay">Save
				<i class="material-icons right">send</i>
			</button>
			{{else}}
			<button class="btn btn-large waves-effect waves-light confirm-timeslots" id="section-next" type="submit" name="action" value="next"
      data-confirmMessage="You have not selected any timeslots for this course. <br><b>Do you wish to continue?</b>"
      data-confirmYes="Continue"
      data-confirmNo="Stay">Next
				<i class="material-icons right">send</i>
			</button>
			{{/if}}
			<!--<button class="btn btn-large waves-effect waves-light" id="section-custom" type="submit" name="action" disabled>Add Event
				<i class="material-icons right">event</i>
			</button>-->
		</footer>
	</form>
	{{> script }}
</body>
</html>
